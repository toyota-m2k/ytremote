<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="model" type="com.michael.ytremote.model.MainViewModel" />
        <variable
            name="handler"
            type="com.michael.ytremote.MainActivity.Handlers" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
        <!-- Trick Spacer to open/close drawer/toolbar -->
        <Space
            android:id="@+id/mic_spacer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="240dp"
            android:layout_height="40dp"

            />

        <!-- Mini Toolbar -->
<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/open_toolbar_button"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:textAllCaps="false"-->
<!--            app:iconGravity="textStart"-->
<!--            app:iconPadding="0dp"-->
<!--            android:insetLeft="4dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:icon="@drawable/ic_down"-->
<!--            android:visibility="invisible"-->
<!--            style="@style/Widget.MaterialComponents.Button.Icon"-->
<!--            tools:visibility="visible"-->
<!--            />-->

        <!-- Toolbar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mic_toolbar"
            app:layout_constraintBottom_toBottomOf="@id/mic_spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/purple_500"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_drawer"
                android:drawableTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{()->handler.showDrawer(true)}"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetLeft="4dp"
                app:layout_constraintEnd_toStartOf="@id/setting_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_stop"
                android:tint="@color/white"
                app:rippleColor="@color/teal_200"
                android:visibility="@{model.appViewModel.playing ? View.VISIBLE : View.GONE}"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:id="@+id/setting_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_setting"
                android:tint="@color/white"
                app:rippleColor="@color/teal_200"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->handler.openSetting()}"
                />
<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/close_toolbar_button"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:textAllCaps="false"-->
<!--                app:iconGravity="textStart"-->
<!--                app:iconPadding="0dp"-->
<!--                android:insetLeft="4dp"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:icon="@drawable/ic_up"-->
<!--                app:rippleColor="@color/teal_200"-->
<!--                style="@style/Widget.MaterialComponents.Button.Icon"-->
<!--                />-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- The main content view -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mic_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <include layout="@layout/content_main" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:contentDescription="@string/app_name"
                app:srcCompat="@android:drawable/ic_dialog_email" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/mic_open_toolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_round_square"
            android:backgroundTint="@color/purple_500"
            app:srcCompat="@drawable/ic_right"
            android:tint="@color/white"
            android:visibility="invisible"
            android:onClick="@{()->handler.showDrawer(true)}"
            tools:layout_marginTop="40dp"
            />

        <!-- Guard View -->
        <FrameLayout
            android:id="@+id/mic_drawer_guard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            android:alpha="0.5"
            android:visibility="visible"
            android:clickable="true"
            android:onClick="@{()->handler.showDrawer(false)}"
            tools:visibility="gone"
            tools:alpha="0.5"
            tools:background="@color/white"
            />

        <!-- The navigation drawer -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mic_drawer"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_gravity="start|top"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="@id/mic_spacer"
            app:layout_constraintTop_toBottomOf="@+id/mic_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_list"
                android:layout_width="240dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/list_toolbar"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:background="#0000" />

            <LinearLayout
                android:id="@+id/list_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/purple_500"
                >
                <ImageButton
                    android:id="@+id/reload_list_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textAllCaps="false"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:src="@drawable/ic_refresh"
                    android:tint="@color/white"
                    app:rippleColor="@color/teal_200"
                    android:contentDescription="@string/refresh"
                    android:onClick="@{()->handler.update()}"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>