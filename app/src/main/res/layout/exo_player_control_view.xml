<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:background="#CC000000">

    <LinearLayout
        android:id="@+id/acx_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/mic_progress_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageButton
            android:id="@+id/mic_ctr_exo_prev"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_prev"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mic_ctr_exo_prev_chapter"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_prev_chapter"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mic_ctr_exo_next_chapter"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_next_chapter"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mic_ctr_exo_next"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_next"
            app:tint="@color/white" />

<!--        <ImageButton-->
<!--            android:id="@id/exo_rew"-->
<!--            android:layout_width="@dimen/mic_media_button_width"-->
<!--            android:layout_height="@dimen/mic_media_button_height"-->
<!--            android:background="?android:attr/selectableItemBackground"-->
<!--            android:tint="@color/white"-->
<!--            android:visibility="gone"-->
<!--            tools:visibility="visible"-->
<!--            app:srcCompat="@drawable/ic_rew" />-->

        <!--<ImageButton android:id="@id/exo_shuffle"-->
        <!--style="@style/ExoMediaButton.Shuffle"/>-->

<!--        <ImageButton -->
<!--            android:id="@id/exo_repeat_toggle"-->
<!--            style="@style/ExoMediaButton"/>-->

        <ImageButton
            android:id="@id/exo_play"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_play"
            app:tint="@color/white" />

        <ImageButton
            android:id="@id/exo_pause"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_pause"
            app:tint="@color/white" />

<!--        <ImageButton-->
<!--            android:id="@id/exo_ffwd"-->
<!--            android:layout_width="@dimen/mic_media_button_width"-->
<!--            android:layout_height="@dimen/mic_media_button_height"-->
<!--            android:background="?android:attr/selectableItemBackground"-->
<!--            android:tint="@color/white"-->
<!--            android:visibility="gone"-->
<!--            tools:visibility="visible"-->
<!--            app:srcCompat="@drawable/ic_ffwd" />-->

        <ImageButton
            android:id="@+id/mic_ctr_pinp_button"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_pinp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mic_ctr_full_button"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_fullscreen"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/mic_ctr_close_button"
            android:layout_width="@dimen/mic_media_button_width"
            android:layout_height="@dimen/mic_media_button_height"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/white" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mic_progress_holder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/exo_position"
        app:layout_constraintRight_toLeftOf="@id/exo_duration">

        <com.michael.ytremote.view.ChapterView
            android:id="@+id/chapter_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:layout_gravity="top"
            />

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/exo_position"
            app:layout_constraintRight_toLeftOf="@id/exo_duration"
            />
    </FrameLayout>
    <TextView android:id="@id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:includeFontPadding="false"
        android:textColor="#FFBEBEBE"
        app:layout_constraintTop_toTopOf="@+id/mic_progress_holder"
        app:layout_constraintBottom_toBottomOf="@+id/mic_progress_holder"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="00:00"
        />

    <TextView android:id="@id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:includeFontPadding="false"
        android:textColor="#FFBEBEBE"
        app:layout_constraintTop_toTopOf="@+id/mic_progress_holder"
        app:layout_constraintBottom_toBottomOf="@+id/mic_progress_holder"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="99:99"
        />
</androidx.constraintlayout.widget.ConstraintLayout>